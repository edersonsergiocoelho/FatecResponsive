<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>fatec_index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>AlunoController</servlet-name>
        <servlet-class>br.com.nairo.controller.AlunoController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AlunoController</servlet-name>
        <url-pattern>/AlunoController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AlunoListController</servlet-name>
        <servlet-class>br.com.nairo.controller.AlunoListController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AlunoListController</servlet-name>
        <url-pattern>/AlunoListController</url-pattern>
    </servlet-mapping>
    
        <servlet>
        <servlet-name>NoticiaController</servlet-name>
        <servlet-class>br.com.nairo.controller.NoticiaController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>NoticiaController</servlet-name>
        <url-pattern>/NoticiaController</url-pattern>
    </servlet-mapping>
    
</web-app>
